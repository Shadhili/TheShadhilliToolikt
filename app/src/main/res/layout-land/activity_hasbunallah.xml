<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:parallax_factor="1.9"
    tools:context=".hasbunallahactivity"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:paddingBottom="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#927e68"
            android:id="@+id/wirdplay"

            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/hasbunallah_title"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:textColor="#ffffff"
                android:id="@+id/wirdtitle"
                />
            <ImageButton
                android:layout_height="40dp"
                android:layout_width="50dp"
                android:id="@+id/pausewird"
                android:background="@drawable/pause"
                android:clickable="true"
                android:layout_gravity="center"
                android:layout_marginEnd="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/playwird"

                />
            <Button
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:id="@+id/playwird"
                android:background="@drawable/play"
                android:clickable="true"
                android:layout_alignBottom="@id/wirdtitle"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/ha1"
            android:id="@+id/wirdhead"
            android:adjustViewBounds="true"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="2600dp"
            android:id="@+id/hasblist"
            android:gravity="right"
            android:divider="#f1f1f1"
            android:dividerHeight="0.5dp"
            >

        </ListView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/scfooter"
            android:id="@+id/scfooter"
            android:adjustViewBounds="true"
            android:padding="20dp"/>


    </LinearLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>